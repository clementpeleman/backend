{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "naam": {
      "type": "string",
      "required": true
    },
    "beschrijving": {
      "type": "richtext",
      "required": true
    },
    "afbeeldingen": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "jaar": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "naam"
    },
    "samenwerkings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::samenwerking.samenwerking",
      "required": true
    },
    "status": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "adres": {
      "type": "string",
      "required": true
    },
    "externe_link": {
      "type": "string"
    },
    "korte_beschrijving": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    }
  }
}
